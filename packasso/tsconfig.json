{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "importHelpers": false,
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "paths": {
      "@packasso/core": [
        "../packages/core/src/main/ts"
      ]
    }
  },
  "include": [
    "./src/main/ts",
    "./src/test/ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
