{
  "name": "packasso-workspaces",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packasso": "packasso-preset-ts-swc-uvu",
  "devDependencies": {
    "concurrently": "7.6.0",
    "eslint": "8.29.0",
    "eslint-config-qiwi": "2.0.4",
    "prettier": "2.8.1",
    "prettier-config-qiwi": "2.0.1",
    "tsm": "2.3.0",
    "typescript": "4.9.4"
  },
  "scripts": {
    "build": "concurrently 'npm:build:*(!build:.+:)'",
    "build:swc": "concurrently 'npm:build:swc:*(!build:swc:.+:)'",
    "build:swc:swc": "yarn workspaces foreach -vip run build:swc:swc",
    "build:swc:dts": "tsc -b tsconfig.dts.json",
    "build:res": "yarn workspaces foreach -vip run build:res",
    "lint": "yarn workspaces foreach -vip run lint",
    "format": "yarn workspaces foreach -vip run format",
    "test": "concurrently 'npm:test:*(!test:.+:)'",
    "test:uvu": "yarn workspaces foreach -vip run test:uvu"
  },
  "eslintConfig": {
    "extends": "eslint-config-qiwi"
  },
  "prettier": "prettier-config-qiwi"
}