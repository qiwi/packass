{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@packasso/build-resources": [
        "../build-resources/src/main/ts"
      ],
      "@packasso/build-ts-tsc": [
        "../build-ts-tsc/src/main/ts"
      ],
      "@packasso/core": [
        "../core/src/main/ts"
      ],
      "@packasso/dev-license": [
        "../dev-license/src/main/ts"
      ],
      "@packasso/dev-ts": [
        "../dev-ts/src/main/ts"
      ],
      "@packasso/release-zx-semrel": [
        "../release-zx-semrel/src/main/ts"
      ],
      "@packasso/style-eslint-prettier": [
        "../style-eslint-prettier/src/main/ts"
      ],
      "@packasso/test-jest": [
        "../test-jest/src/main/ts"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}
