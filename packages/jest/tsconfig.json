{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "importHelpers": false,
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "paths": {
      "@packasso/core": [
        "../core/src/main/ts"
      ],
      "@packasso/jest-environment-jsdom": [
        "../jest-environment-jsdom/src/main/ts"
      ],
      "@packasso/jest-snapshot-resolver": [
        "../jest-snapshot-resolver/src/main/ts"
      ],
      "@packasso/jest-svgr-transformer": [
        "../jest-svgr-transformer/src/main/ts"
      ]
    }
  },
  "include": [
    "./src/main/ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
