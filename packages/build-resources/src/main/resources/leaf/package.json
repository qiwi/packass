{
  "files": [
    "target/resources/**/*"
  ],
  "scripts": {
    "build": "concurrently 'npm:build:*(!build:.+:)'",
    "build:res": "yarn build:res:del && yarn build:res:run",
    "build:res:del": "rimraf target/resources",
    "build:res:run": "globby-cp src/main/resources target/resources"
  },
  "devDependencies": {
    "concurrently": "7.6.0",
    "globby-cp": "1.1.3",
    "rimraf": "3.0.2"
  }
}
