{
  "name": "@packasso/workspaces",
  "private": true,
  "packasso": "@packasso/preset-ts-tsc-uvu",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "self": "node --conditions development --loader tsm packages/cli/src/main/ts/index.ts",
    "build": "packasso build",
    "lint": "yarn workspaces foreach -vip run lint",
    "format": "yarn workspaces foreach -vip run format",
    "test": "concurrently 'npm:test:*(!test:.+:)'",
    "test:uvu": "c8 -o target/coverage -r html -r text -r lcov -n '**/*/src/main/{ts,js}' uvu -r tsm -r earljs/uvu . 'src/test/[jt]s/.*.(spec|test).[jt]sx?' -i target"
  },
  "license": "MIT",
  "devDependencies": {
    "c8": "7.12.0",
    "concurrently": "7.6.0",
    "earljs": "0.2.3",
    "tsm": "2.3.0",
    "typescript": "4.9.4",
    "uvu": "0.5.6"
  }
}
