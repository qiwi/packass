{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@qiwi/packasso-release-zx-semrel": [
        "./src/main/ts"
      ],
      "@qiwi/packasso": [
        "../packasso/src/main/ts"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}