{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "@packasso/core": [
        "../core/src/main/ts"
      ],
      "@packasso/dev-packasso": [
        "../dev-packasso/src/main/ts"
      ],
      "@packasso/preset-ts-tsc-uvu": [
        "../preset-ts-tsc-uvu/src/main/ts"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ]
}
